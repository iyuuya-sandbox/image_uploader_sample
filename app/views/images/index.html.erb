<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Fileable</th>
      <th>Caption</th>
      <th>File</th>
      <th>Name</th>
      <th>Content type</th>
      <th>Digest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.fileable %></td>
        <td><%= image.caption %></td>
        <td><%= image.file %></td>
        <td><%= image.name %></td>
        <td><%= image.content_type %></td>
        <td><%= image.digest %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
